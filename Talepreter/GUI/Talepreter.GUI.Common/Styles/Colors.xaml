<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                        xmlns:PresentationOptions="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options" 
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- colors -->
    <Color x:Key="ControlBackgroundColor" R="18" G="18" B="18" A="255" PresentationOptions:Freeze="true" />
    <Color x:Key="ControlTextColor" R="192" G="192" B="192" A="255" PresentationOptions:Freeze="true"/>
    <Color x:Key="CheckBoxTickColor" R="96" G="96" B="255" A="255" PresentationOptions:Freeze="true"/>
    <Color x:Key="ControlReadonlyTextColor" R="56" G="133" B="210" A="255" PresentationOptions:Freeze="true"/>
    <Color x:Key="TextCaretColor" R="56" G="133" B="210" A="255" PresentationOptions:Freeze="true"/>
    <Color x:Key="ControlFocusColor1" R="255" G="165" B="0" A="255" PresentationOptions:Freeze="true"/>
    <Color x:Key="ControlFocusColor2" R="255" G="135" B="0" A="255" PresentationOptions:Freeze="true"/>
    <Color x:Key="ControlFocusColor3" R="255" G="105" B="0" A="255" PresentationOptions:Freeze="true"/>
    <Color x:Key="ControlBorderColor" R="128" G="128" B="128" A="255" PresentationOptions:Freeze="true"/>

    <Color x:Key="ControlFocus2Color1" R="56" G="163" B="210" A="255" PresentationOptions:Freeze="true"/>
    <Color x:Key="ControlFocus2Color2" R="56" G="133" B="225" A="255" PresentationOptions:Freeze="true"/>
    <Color x:Key="ControlFocus2Color3" R="56" G="103" B="240" A="255" PresentationOptions:Freeze="true"/>

    <!-- brushes -->
    <SolidColorBrush x:Key="ControlBackgroundBrush" Color="{DynamicResource ControlBackgroundColor}" Opacity="100" PresentationOptions:Freeze="true"/>
    <SolidColorBrush x:Key="ControlTextBrush" Color="{DynamicResource ControlTextColor}" Opacity="100"  PresentationOptions:Freeze="true"/>
    <SolidColorBrush x:Key="ControlReadonlyTextBrush" Color="{DynamicResource ControlReadonlyTextColor}" Opacity="100" PresentationOptions:Freeze="true"/>
    <SolidColorBrush x:Key="TextCaretBrush" Color="{DynamicResource TextCaretColor}" Opacity="100" PresentationOptions:Freeze="true"/>
    <LinearGradientBrush x:Key="ControlFocusBrush" Opacity="100" StartPoint="0,0" EndPoint="1,1" PresentationOptions:Freeze="true">
        <LinearGradientBrush.GradientStops>
            <GradientStop Offset="0" Color="{DynamicResource ControlFocusColor1}"/>
            <GradientStop Offset="0.1" Color="{DynamicResource ControlFocusColor2}"/>
            <GradientStop Offset="0.5" Color="{DynamicResource ControlFocusColor3}"/>
            <GradientStop Offset="0.9" Color="{DynamicResource ControlFocusColor2}"/>
            <GradientStop Offset="1" Color="{DynamicResource ControlFocusColor1}"/>
        </LinearGradientBrush.GradientStops>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="ControlFocusInvertBrush" Opacity="100" StartPoint="0,0" EndPoint="1,1" PresentationOptions:Freeze="true">
        <LinearGradientBrush.GradientStops>
            <GradientStop Offset="0" Color="{DynamicResource ControlFocusColor3}"/>
            <GradientStop Offset="0.1" Color="{DynamicResource ControlFocusColor2}"/>
            <GradientStop Offset="0.5" Color="{DynamicResource ControlFocusColor1}"/>
            <GradientStop Offset="0.9" Color="{DynamicResource ControlFocusColor2}"/>
            <GradientStop Offset="1" Color="{DynamicResource ControlFocusColor3}"/>
        </LinearGradientBrush.GradientStops>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="ControlFocus2Brush" Opacity="100" StartPoint="0,0" EndPoint="1,1" PresentationOptions:Freeze="true">
        <LinearGradientBrush.GradientStops>
            <GradientStop Offset="0" Color="{DynamicResource ControlFocus2Color1}"/>
            <GradientStop Offset="0.1" Color="{DynamicResource ControlFocus2Color2}"/>
            <GradientStop Offset="0.5" Color="{DynamicResource ControlFocus2Color3}"/>
            <GradientStop Offset="0.9" Color="{DynamicResource ControlFocus2Color2}"/>
            <GradientStop Offset="1" Color="{DynamicResource ControlFocus2Color1}"/>
        </LinearGradientBrush.GradientStops>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="ControlFocus2InvertBrush" Opacity="100" StartPoint="0,0" EndPoint="1,1" PresentationOptions:Freeze="true">
        <LinearGradientBrush.GradientStops>
            <GradientStop Offset="0" Color="{DynamicResource ControlFocus2Color3}"/>
            <GradientStop Offset="0.1" Color="{DynamicResource ControlFocus2Color2}"/>
            <GradientStop Offset="0.5" Color="{DynamicResource ControlFocus2Color1}"/>
            <GradientStop Offset="0.9" Color="{DynamicResource ControlFocus2Color2}"/>
            <GradientStop Offset="1" Color="{DynamicResource ControlFocus2Color3}"/>
        </LinearGradientBrush.GradientStops>
    </LinearGradientBrush>
    <SolidColorBrush x:Key="ControlBorderBrush" Color="{DynamicResource ControlBorderColor}" Opacity="100" PresentationOptions:Freeze="true"/>

    <VisualBrush x:Key="UpImage" TileMode="None" Stretch="Uniform" PresentationOptions:Freeze="true">
        <VisualBrush.Visual>
            <Grid Width="8" Height="8">
                <Polygon Points="0,1 1,0 2,1" Stretch="Uniform" Fill="Black" Stroke="Black" StrokeLineJoin="Round" />
            </Grid>
        </VisualBrush.Visual>
    </VisualBrush>

    <VisualBrush x:Key="DownImage" TileMode="None" Stretch="Uniform" PresentationOptions:Freeze="true">
        <VisualBrush.Visual>
            <Grid Width="8" Height="8">
                <Polygon Points="0,0 1,1 2,0" Stretch="Uniform" Fill="Black" Stroke="Black" StrokeLineJoin="Round" />
            </Grid>
        </VisualBrush.Visual>
    </VisualBrush>
</ResourceDictionary>